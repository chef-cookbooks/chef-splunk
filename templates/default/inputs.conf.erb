[default]
host = <%= @inputs_conf['host'] %>

<% @inputs_conf['ports'].each do |port| -%>
[tcp://:<%= port['port_num'] %>]
  <% port['config'].each_pair do |name, value| -%>
<%= name %> = <%= value %>
  <% end -%>
<% end -%>

<% @inputs_conf['inputs'].keys.sort.each do |inputname| -%>
[<%= inputname -%>]
<% @inputs_conf['inputs'][inputname].sort.each do |key,value| -%>
  <%= key -%> = <%= value %>
  <% end %>
<% end %>
